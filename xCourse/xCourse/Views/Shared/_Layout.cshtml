<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] - xCourse</title>
    <link rel="stylesheet" href="~/css/common.css" />
    <link rel="stylesheet" href="~/css/bootstrapOverrides.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div id="top_header">
            <a asp-area="" asp-controller="Home" asp-action="Index">xCourse</a>
        </div>
    </header>

    <ul>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Plan" asp-action="Index">Plan</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Compare" asp-action="Index">Compare</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
    </ul>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" id="lsu_footer">
        <div class="container">
            &copy; 2020 - xCourse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>